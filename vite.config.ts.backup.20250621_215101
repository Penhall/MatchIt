        configure: (proxy) => {
          proxy.on('error', (err, req, res) => {
            console.error('ðŸ”´ Proxy Error:', err.message);
            console.error('ðŸ”´ Request URL:', req.url);
          });
          
          proxy.on('proxyReq', (proxyReq, req) => {
            console.log('ðŸš€ Proxy Request:', req.method, req.url);
            console.log('ðŸŽ¯ Target:', `http://localhost:3000${req.url}`);
          });
          
          proxy.on('proxyRes', (proxyRes, req) => {
            const emoji = proxyRes.statusCode < 400 ? 'âœ…' : 'ðŸ”´';
            console.log(`${emoji} Proxy Response:`, proxyRes.statusCode, req.url);
          });
        }
      },
      
      // Proxy para uploads
      '/uploads': {
        target: 'http://localhost:3000',
        changeOrigin: true,
        secure: false
      }
    }
  },
  
  // ConfiguraÃ§Ã£o de preview (produÃ§Ã£o local)
  preview: {
    port: 4173,
    host: true,
    open: true,
    
    // Mesmo proxy para preview
