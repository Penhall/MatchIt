{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./dist",
    "rootDir": "./server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false // Desabilitar verificação de JS para evitar erros em arquivos JS puros
  },
  "include": [
    "server/**/*.ts" // Incluir apenas arquivos .ts para compilação
  ],
  "exclude": [
    "node_modules",
    "dist",
    "server/**/*.js" // Excluir arquivos .js do diretório server para não serem tratados como TS
  ]
}
