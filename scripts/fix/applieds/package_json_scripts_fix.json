{
  "name": "matchit---style-&-emotion-connect",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "node server/app.js",
    "start:dev": "NODE_ENV=development node server/app.js",
    "start:prod": "NODE_ENV=production node server/app.js",
    "server": "cd server && node app.js",
    "backend": "node server/app.js",
    "frontend": "vite",
    "fix:permissions": "chmod +x scripts/fix/*.sh",
    "fix:ports": "bash scripts/fix/fix_port_issues.sh",
    "fix:complete": "bash scripts/fix/complete_fix.sh",
    "test": "echo \"Testes não implementados ainda\" && exit 0",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:all": "rm -rf dist node_modules",
    "reinstall": "rm -rf node_modules package-lock.json && npm install",
    "health": "curl -f http://localhost:3001/api/health || echo 'Backend não está rodando'",
    "debug": "NODE_ENV=development DEBUG=* node server/app.js",
    "logs": "tail -f server.log 2>/dev/null || echo 'Arquivo de log não encontrado'"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.18.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "vite": "^4.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "author": "MatchIt Team",
  "description": "Aplicação de conexão baseada em estilo e compatibilidade emocional",
  "keywords": [
    "matchit",
    "dating",
    "style",
    "react",
    "nodejs",
    "postgresql"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/matchit.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/matchit/issues"
  },
  "homepage": "https://matchit.com"
}