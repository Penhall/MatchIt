# .env - Configuração de Ambiente MatchIt

# =====================================================
# CONFIGURAÇÃO DO SERVIDOR
# =====================================================
NODE_ENV=development
PORT=3000

# =====================================================
# CONFIGURAÇÃO DO BANCO DE DADOS
# =====================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=matchit_db
DB_USER=matchit
